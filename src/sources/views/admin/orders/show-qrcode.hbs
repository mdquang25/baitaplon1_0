<div class="d-flex justify-content-center mt-4">
    <div class="d-flex flex-column">
        <a href="/admin/donhang" class="btn btn-primary ms-auto"><i
                class="fa-sharp fa-solid fa-house-person-return"></i>Về đơn hàng</a>

        <div class="card text-center my-2 py-4 px-2">
            <h5>Quét mã QR để thanh toán</h5>
            <div>Ngân hàng TMCP Công Thương Việt Nam - VietinBank</div>
            <div>Số tài khoản: 0382740405</div>
            <div>Số tiền: <span id="total" class="price-label">{{order.total}}</span></div>
            <div>Nội dung chuyển khoản: "{{order.bankingMessage}}"</div>
            <img class="img-fluid mx-4" src="{{order.qrcodeUrl}}" alt="mã QR thanh toán">
            <div id="brand-name-label" class="text-bg-success pt-0">{{shopInfo.shortName}}</div>
        </div>
    </div>
</div>
<div id="printId" hidden>{{printId}}</div>
<script>
    const price = document.getElementById('total');
    const number = parseInt(price.innerHTML);
    price.innerHTML = number.toLocaleString('vi-VN') + 'đ';


    const printId = document.getElementById('printId').innerHTML;
    if(printId.length>0)
        window.open('/admin/donhang/' + printId + '/in-don-hang', '_blank');
</script>