<div class="row justify-content-center mt-4">
    <div class="d-flex justify-content-end col-md-9 col-lg-6 px-0">
        <a href="/admin/cuahang/quangcao"><button class="btn btn-primary"><i
                    class="fa-sharp fa-solid fa-house-person-return"></i> Trở về</button></a>
    </div>
</div>
<div class="row justify-content-center mt-4">

    <form action="/admin/cuahang/quangcao/{{carousel._id}}/luu" method="post" enctype="multipart/form-data"
        class="card col-md-9 col-lg-6" style="background-color: rgb(103, 193, 136)">
        <h1 class="text-center">Sửa quảng cáo</h1>
        <div class="mb-3">
            <label for="link" class="form-label mx-2">Link sản phẩm hoặc bài viết</label>
            <input type="text" maxlength="200" name="link" id="link" value="{{carousel.link}}" autocomplete="cc-name"
                class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label mx-2">Chọn file ảnh</label>
            <input class="form-control" name="image" type="file" accept="image/*" id="formFile">
        </div>

        <div>Ảnh quảng cáo:</div>
        <img src="{{carousel.imageUrl}}" alt="Ảnh quảng cáo" style="width: 10rem;">

        <button type="submit" class="btn btn-success mb-3">
            <i class="fa-regular fa-floppy-disk me-1"></i>Lưu quảng cáo</button>
        </from>
</div>