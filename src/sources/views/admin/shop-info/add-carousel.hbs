<div class="row justify-content-center mt-4">
    <div class="d-flex justify-content-end col-md-9 col-lg-6 px-0">
        <a href="/admin/cuahang/quangcao"><button class="btn btn-primary"><i class="fa-sharp fa-solid fa-house-person-return"></i> Trở về</button></a>
    </div>
</div>
<div class="row justify-content-center mt-4">

    <form action="/admin/cuahang/quangcao/luu" method="post" enctype="multipart/form-data" class="card col-md-9 col-lg-6" style="background-color: rgb(103, 193, 136)">
        <h1 class="text-center">Thêm quảng cáo</h1>
        <div class="mb-3">
            <label for="title" class="form-label mx-2">Tên quảng cáo</label>
            <input type="text" name="title" id="title" autocomplete="cc-name" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="link" class="form-label mx-2">Link sản phẩm hoặc bài viết</label>
            <input type="text" name="link" id="link" autocomplete="cc-name" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label mx-2">Mô tả</label>
            <textarea type="text" name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label mx-2">Chọn file ảnh</label>
            <input class="form-control" name="image" type="file" id="formFile">
        </div>
        <button type="submit" class="btn btn-success mb-3">
            <i class="fa-regular fa-floppy-disk me-1"></i>Lưu quảng cáo</button>
    </from>
</div>