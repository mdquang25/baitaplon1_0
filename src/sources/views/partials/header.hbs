<script>
    const isLoggedin = document.getElementById('isLoggedin').innerHTML;
    const signBtn = document.getElementById('sign-btn');
    const cart = document.getElementById('cart');
    const myAccountDropdown = document.getElementById('my-account-dropdown');
    const logoutAlert = document.getElementById('logout-alert')
    const logoutBtn = document.getElementById('logout-btn')
    const newProduct = document.getElementById('newProduct').value;
    const newOrderUpdate = document.getElementById('newOrderUpdate').value;
    const redDot = document.getElementById('red-dot');


    if (newProduct !== 'true' && newProduct !== 'false') {
        cart.classList.add('d-none');
    }
    else if (newProduct === 'true' || newOrderUpdate === 'true') {
        redDot.classList.remove('d-none');
    }


    logoutAlert.addEventListener('shown.bs.modal', () => {
        logoutBtn.focus()
    })
    if (isLoggedin) {
        signBtn.classList.add('d-none');
    }
    else {
        cart.classList.add('d-none');
        myAccountDropdown.classList.add('d-none');
    }
</script>