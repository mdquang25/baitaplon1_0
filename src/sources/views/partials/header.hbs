<script>
    const myAccountDropdown = document.getElementById('my-account-dropdown');
    const logoutAlert = document.getElementById('logout-alert')
    const logoutBtn = document.getElementById('logout-btn')
    const signOutBtn = document.getElementById('sign-out-btn');
    const toastSuccessElement = document.getElementById('toast1')
    const toastDangerElement = document.getElementById('toast2')
    const toastSuccess = bootstrap.Toast.getOrCreateInstance(toastSuccessElement);
    const toastDanger = bootstrap.Toast.getOrCreateInstance(toastDangerElement);
    var toastSuccessShowTime = new Date();
    var toastDangerShowTime = new Date();

    signOutBtn.addEventListener('click', function (e) {
        logoutAlert.classList.remove('show');
        fetch('/dangxuat')
            .then(response => {
                if (response.ok)
                    return response.json();
                else {
                    throw new Error('Request failed');
                }
            }).then(data => {
                toastSuccessElement.firstElementChild.innerHTML = 'Đã đăng xuất';
                toastSuccess.show();
                setTimeout(() => location.reload(), 2000);
            }).catch(error => {
                toastDangerElement.firstElementChild.innerHTML = 'Đã xảy ra lỗi';
                toastDanger.show();
            });
    })


    logoutAlert.addEventListener('shown.bs.modal', () => {
        logoutBtn.focus();
    });


    document.addEventListener('DOMContentLoaded', function () {
        const newProduct = document.getElementById('newProduct').value;
        const newOrderUpdate = document.getElementById('newOrderUpdate').value;
        const redDot = document.getElementById('red-dot');
        const isLoggedin = document.getElementById('isLoggedin');
        const signBtn = document.getElementById('sign-btn');
        const cart = document.getElementById('cart');


        if (newProduct !== 'true' && newProduct !== 'false') {
            cart.classList.add('d-none');
        }
        else if (newProduct === 'true' || newOrderUpdate === 'true') {
            redDot.classList.remove('d-none');
        }

        if (isLoggedin.value==='true') {
            signBtn.classList.add('d-none');
        }
        else {
            cart.classList.add('d-none');
            myAccountDropdown.classList.add('d-none');
        }
    });
    //DOMCONTENTLOADED END////////////

    function navigateTo(url) {
        window.location.href = url;
    }
</script>