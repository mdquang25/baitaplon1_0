<div class="row justify-content-center mt-4 mb-4">
        <div class="col-md-9 col-lg-7 d-flex justify-content-end p-0">
            <a href="/taikhoan/xem" class="btn btn-primary mt-4 mb-2"><i class="fa-sharp fa-solid fa-house-person-return"></i> Tài khoản của tôi</a>
        </div>
    <form action="/taikhoan/sua" method="post"
        enctype="application/x-www-form-urlencoded" class="card col-md-9 col-lg-7"
        style="background-color: rgb(103, 193, 185)">
        <input name="_method" value="PATCH" class="d-none">
        <h1 class="text-center">Sửa tài khoản của tôi</h1>
        <div class="mb-3">
            <label for="fullName" class="form-label mx-2">Họ và tên</label>
            <input type="text" maxlength="30" name="fullName" id="fullName" autocomplete="cc-name" class="form-control"
                value="{{account.fullName}}" required>
        </div>
        <div class="mb-3">
            <label for="birth" class="form-label mx-2">Ngày sinh</label>
            <input type="date" min="1920-01-01" max="2022-12-31" name="dateOfBirth" id="birth" autocomplete="bday-day" class="form-control" placeholder="01/1/2000" value="{{account.dateOfBirth}}">
        </div>
        <div class="mb-3">
            <label for="address" class="form-label mx-2">Địa chỉ</label>
            <input type="text" maxlength="150" name="address" id="address" autocomplete="address-level4" class="form-control"
                value="{{account.address}}" placeholder="Nhập địa chỉ.." required>
        </div>

        <button type="submit" class="btn btn-success mb-3"><i class="fa-regular fa-floppy-disk me-1"></i>Lưu thay
            đổi</button>
    </form>

</div>