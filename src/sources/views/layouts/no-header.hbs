<!doctype html>
<html lang="vni">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{pageTitle}}</title>
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/icon1.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="/fontawesome/css/all.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/app.css" />
</head>

<body>
    <div class="app">
        <div id="sign-container" class="text-center">
            {{{body}}}
        </div>
        {{>footer}}
    </div>

    {{!//////////toast//////////////////////////////}}
    <div class="toast-container position-fixed top-0 start-50 translate-middle-x" style="width: fit-content;">
        <div id="toast1" class="toast p-0 m-0 text-bg-success text-center" role="alert" aria-live="assertive"
            aria-atomic="true">
            <div class="toast-body fs-5">

            </div>
        </div>
    </div>
    <div class="toast-container position-fixed top-0 start-50 translate-middle-x" style="width: fit-content;">
        <div id="toast2" class="toast p-0 m-0 text-bg-danger text-center" role="alert" aria-live="assertive"
            aria-atomic="true">
            <div class="toast-body fs-5">

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script>
        const toastSuccessElement = document.getElementById('toast1')
        const toastDangerElement = document.getElementById('toast2')
        const toastSuccess = bootstrap.Toast.getOrCreateInstance(toastSuccessElement);
        const toastDanger = bootstrap.Toast.getOrCreateInstance(toastDangerElement);
    </script>
</body>

</html>